{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicWithFunComponentSchematic",
  "title": "Creates a component Schematic.",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the schematic within.",
      "visible": false
    },
    "name": {
      "description": "Specifies the name of the generated Class.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "withTable": {
      "type": "boolean",
      "description": "When true, creates the the table component",
      "default": false
    },
    "module": {
      "type": "string",
      "description": "The declaring NgModule."
    }
  }
}
